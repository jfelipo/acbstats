{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES5", "ES6", "ES7", "ES2018"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.js"]
}
